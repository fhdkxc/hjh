	padding          : var(--d-btn-padding);       
	color            : var(--d-btn-color);    
}
.d-btn-red:hover {
	background-color : var(--red-color-dark);
	color: var(--white-color-dark);
}
.d-btn-red:active {
	background-color : var(--red-color-deep-dark);
	color: var(--white-color-deep-dark);
}
.d-btn-green {
	background-color : var(--green-color);
	border-radius    : var(--d-btn-border-radius);
