}

// (학생)출석 버튼
const insertStdDclz = function(){
	$.ajax({
		url :"/dclz/insertStdDclz",
	    type:"post",
	    contentType:"application/json",
	    dataType:"json",
	    beforeSend:function(xhr){
			xhr.setRequestHeader("${_csrf.headerName}","${_csrf.token}");
		},
		success : function(res) {
			console.log("insertStdDclz:",res);
		},
